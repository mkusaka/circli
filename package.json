{
  "name": "circli",
  "description": "cli which implements useful command for circleci",
  "version": "0.0.12",
  "main": "index.js",
  "repository": "https://github.com/mkusaka/circli.git",
  "author": "mkusaka <hinoshita1992@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^17.0.36",
    "@types/prettier": "^2.7.0",
    "@vercel/ncc": "^0.34.0",
    "concurrently": "^7.3.0",
    "fast-glob": "^3.2.11",
    "openapi-typescript-codegen": "^0.23.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.2"
  },
  "scripts": {
    "bump:patch": "npm version patch",
    "update": "concurrently -m 1 \"npm:update:*\" && prettier --write './**/*.{json,ts}' && yarn gen && yarn transform",
    "update:swagger": "curl -o swagger.json https://circleci.com/api/v2/openapi.json",
    "gen": "openapi -i swagger.json -o client --useOptions --useUnionTypes --indent 2",
    "run": "deno run -A main.ts",
    "transform": "ncc run transform.ts",
    "fmt": "prettier --write transform.ts",
    "compile": "concurrently -m 1 \"npm:compile:*\"",
    "compile:linux": "deno compile -A --target x86_64-unknown-linux-gnu -o dist/linux/circli main.ts",
    "compile:Mac:amd64": "deno compile -A --target x86_64-apple-darwin -o dist/macamd/circli main.ts",
    "compile:Mac:arm64": "deno compile -A --target aarch64-apple-darwin -o dist/macarm/cicli main.ts",
    "package": "yarn compile && concurrently -m 1 \"npm:package:*\"",
    "package:linux": "cp README.md dist/linux/ && cp LICENSE dist/linux/ && cd ./dist/linux/ && tar cvzf ../../circli_linux_x86_64.tar.gz ./",
    "package:Mac:amd64": "cp README.md dist/macamd/ && cp LICENSE dist/macamd/ && cd ./dist/macamd/ && tar cvzf ../../circli_Darwin_x86_64.tar.gz ./",
    "package:Mac:arm64": "cp README.md dist/macarm/ && cp LICENSE dist/macarm/ && cd ./dist/macarm && tar cvzf ../../circli_Darwin_arm64.tar.gz ./",
    "upload": "yarn package && concurrently -m 1 \"npm:upload:*\"",
    "upload:linux": "gh release upload \"$(git describe --tags --abbrev=0)\" circli_linux_x86_64.tar.gz",
    "upload:Mac:amd64": "gh release upload \"$(git describe --tags --abbrev=0)\" circli_Darwin_x86_64.tar.gz",
    "upload:Mac:arm64": "gh release upload \"$(git describe --tags --abbrev=0)\" circli_Darwin_arm64.tar.gz",
    "gen:swaggerdts": " npx json-dts-gen swagger.json"
  }
}
